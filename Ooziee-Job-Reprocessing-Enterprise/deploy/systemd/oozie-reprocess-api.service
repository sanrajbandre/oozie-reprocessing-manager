[Unit]
Description=Oozie Reprocessing Manager API (FastAPI)
After=network.target redis.service mysqld.service mariadb.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/oozie-reprocessing-manager/backend
EnvironmentFile=/opt/oozie-reprocessing-manager/backend/.env
ExecStart=/opt/oozie-reprocessing-manager/backend/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
